html
	head
		title Post your message
		style
			include main.css
		body
			include header.pug
			h1 Welcome: #{user.username}
			h1 What is your message:
			form(class="forms" method="POST" action="/event/postmessage")
				input(type="text" placeholder="Title" name="title") 
				br
				br
				textarea(row="10" column="25" type="text" placeholder="Message" name="message")
				br
				br
				input(type="submit" value="send!")

			include footer.pug